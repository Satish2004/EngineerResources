      /* Anchor Tag Styling */
.hover-link {
  position: relative;
  font-size: 1.3rem;
  color: black;
  text-decoration: none;
  padding: 5px 0;
  display: inline-block;
  margin: 0 10px;
}
.signUpBTn{
  background: #000;
  width: 30px;
  height:30px;
  padding: 10px;
  color: white;
  border-radius: 20%;

}
.signUpBTn:hover{

 
  color: white;

}

/* Line Effect */
.hover-link::before {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 0;
  height: 2px;
  background-color: #27c6d5;
  transition: all 0.3s ease;
  transform: translateX(-50%);
}

/* Hover State */
.hover-link:hover::before {
  width: 100%;
}

      
