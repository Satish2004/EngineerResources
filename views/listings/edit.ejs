<% layout('/layouts/boilerplate') -%>

<body style="background-color: #1E1E2F;">
  <div class="row">
    <div class="col-8 offset-2" style="background-color: #2A2A3B; padding: 20px; margin-top: 16px; border-radius:2%;">
      <h3 class="mt-3" style="color: white; text-align: center;">Edit Listing</h3>
      <form
        method="POST"
        action="/listings/<%= listing._id %>?_method=PUT"
        enctype="multipart/form-data"
      >
        <!-- 1 -->
        <div class="mb-3">
          <label for="title" class="form-label" style="color: white;">Title</label>
          <input
            style="background-color: #1E1E2F; color: white;"
            type="text"
            name="listing[title]"
            value="<%= listing.title %>"
            class="form-control"
            placeholder="Enter name here"
            required
          />
        </div>

        <!-- 2 -->
        <div class="mb-3">
          <label for="description" class="form-label" style="color: white;">Description</label>
          <textarea
            style="background-color: #1E1E2F; color: white;"
            name="listing[description]"
            id="textarea"
            class="form-control"
            placeholder="Enter description here"
            required
          >
            <%= listing.description %>
          </textarea>
        </div>

        <!-- 3 -->
        <!-- original image preview -->
        <div class="mb-3">
          <p style="color: white;">Your Image</p> <br>
          <img src="<%= originalImageUrl %>" alt="original Image" />
        </div>

        <div class="mb-3">
          <label for="image" class="form-label" style="color: white;">Upload New Image</label>
          <input type="file" name="listing[image]" class="form-control" style="background-color: #1E1E2F;" />
        </div>

        <!-- 4 -->
        <div class="mb-3">
          <label for="price" class="form-label" style="color: white;">Price</label>
          <input
            style="background-color: #1E1E2F; color: white;"
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="Ex: 1,400"
            value="<%= listing.price %>"
            required
          />
        </div>

        <!-- 5 -->
        <div class="mb-3">
          <label for="country" class="form-label" style="color: white;">Contact</label>
          <input
            style="background-color: #1E1E2F; color: white;"
            type="text"
            name="listing[country]"
            class="form-control"
            placeholder="Ex: India"
            value="<%= listing.country %>"
            required
          />
        </div>

        <!-- 6 -->
        <div class="mb-3">
          <label for="location" class="form-label" style="color: white;">Location</label>
          <input
            style="background-color: #1E1E2F; color: white;"
            type="text"
            name="listing[location]"
            class="form-control"
            placeholder="Ex: Chhattisgarh(CG)"
            value="<%= listing.location %>"
            required
          />
        </div>

        <button class="button-84" role="button">Update Listing</button>
      </form>
    </div>
  </div>
</body>
