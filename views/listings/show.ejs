<% layout('/layouts/boilerplate') -%>
  <body>
    <div class="container">
      <h3>Listing Details</h3>
      <ul>
        <li><%= listing.title %></li>
        <li><%= listing.description %></li>
        <li class="price">&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
        </li></li>
        <li><%= listing.location %></li>
        <li><%= listing.country %></li>
      </ul>
      <button><a href="/listings/<%= listing._id %>/edit" class="editTag">Edit Your Listing</a></button>
     <!-- delete btn -> using form -->
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">

        <button class="editTag2">delete</button>
      </form>
    </div>
    </div>
  </body>

