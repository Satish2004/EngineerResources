<%- layout('/layouts/boilerplate') -%>
<style>
  body {
    /* background-image: url('https://e1.pxfuel.com/desktop-wallpaper/721/613/desktop-wallpaper-abstract-login-page.jpg'); */
    background-size: cover; /* Ensures the background image covers the entire screen */
    background-position: center; /* Centers the background image */
    background-repeat: no-repeat; /* Prevents the image from repeating */
    margin: 0; /* Removes any default margins */
    height: 100vh; /* Ensures the body takes up the full viewport height */
    overflow: hidden;
  }

  /* .New-reg{
    display: flex;
    color: black;
    text-decoration: none;
    margin-top:10px;
  }
  .New-reg:hover{
    color: #27c6d5;
  } */

  /* Styling for Anchor Tag */
  .New-reg {
    position: relative;
    margin: 5px;
    font-size: 1.2rem;
    color: black;
    text-decoration: none;
    padding-bottom: 5px; /* Adds space for the underline */
    display: inline-block;
  }

  /* Line Transition Effect */
  .New-reg::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 0;
    height: 2px;
    background-color: #27c6d5; /* Line color */
    transition: width 0.3s ease;
  }

  /* Hover Effect */
  .New-reg:hover::after {
    width: 100%; /* Expands the line to full width */
  }
  .btn-login {
    background-color: #27c6d5;
    color: white;
    border-radius: 15px;
    padding: 10px;
    border: none;
    margin-right: 8px;
  }
  .btn-login:hover {
    background-color: #2f9099d0;
  }
  .boldText {
    font-weight: 500;
  }
</style>
<div>
  <div class="row mt-3 ">
    <h1 class="col-6 offset-4 mb-5">User Login</h1>
    <div class="col-6 offset-3">
      <form action="/login" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label boldText"
            ><i class="fa-solid fa-user"></i> Username
          </label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-control"
            required
          />
          <div class="valid-feedback">valid</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label boldText"
            ><i class="fa-solid fa-lock"></i> Password</label
          >
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            required
          />
        </div>
        <button type="submit" class="btn-login">Login</button>
        <a href="/signup" class="New-reg">New Registration</a>
      </form>
    </div>
  </div>
</div>
